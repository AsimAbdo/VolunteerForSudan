<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VolunteerForSudan" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">#efef11</item>
    </style>

    <style name="Theme.VolunteerForSudan" parent="Base.Theme.VolunteerForSudan" />

    <style name="base" >
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="Theme.VolunteerForSudan.mCardTextViewStyle" parent="base">
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="android:layout_marginBottom">@dimen/_3sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Theme.VolunteerForSudan.mTitleStyle" parent="base">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>
    </style>

    <style name="Theme.VolunteerForSudan.mEditTextStyle" parent="base">
        <item name="hintTextColor">@color/hintColor</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:background">@drawable/et_shape</item>
    </style>
    
    <style name="Theme.VolunteerForSudan.mButton" parent="base">
        <item name="android:layout_marginStart">@dimen/_30sdp</item>
        <item name="android:layout_marginEnd">@dimen/_30sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:padding">@dimen/_8sdp</item>
    </style>

    <style name="Theme.VolunteerForSudan.mLinkTextView" parent="base">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">@dimen/_5sdp</item>
<!--        Trying to make underline -->
    </style>

    <style name="Theme.VolunteerForSudan.mImageCard" parent="base" >
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>
    </style>

    <style name="Theme.VolunteerForSudan.mSpinnerStyle" parent="base">
        <item name="android:padding">@dimen/_8sdp</item>
    </style>

    <style name="Theme.VolunteerForSudan.license" parent="base">
        <item name="android:textStyle"> italic</item>
    </style>
</resources>