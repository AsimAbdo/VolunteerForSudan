<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_8sdp"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/service_item_image"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/service_item_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Type"
                android:layout_below="@+id/service_item_image"
                android:layout_alignStart="@+id/service_item_image"
                style="@style/Theme.VolunteerForSudan.mCardTextViewStyle"/>

            <TextView
                android:id="@+id/service_item_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Date"
                android:layout_below="@+id/service_item_tv_type"
                android:layout_alignStart="@+id/service_item_image"
                style="@style/Theme.VolunteerForSudan.mCardTextViewStyle"/>

            <TextView
                android:id="@+id/service_item_tv_volunteer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volunteer Name"
                android:layout_below="@+id/service_item_tv_date"
                android:layout_alignStart="@+id/service_item_image"
                style="@style/Theme.VolunteerForSudan.mCardTextViewStyle"/>

            <TextView
                android:id="@+id/service_item_tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:layout_below="@+id/service_item_tv_volunteer"
                android:layout_alignStart="@+id/service_item_image"
                style="@style/Theme.VolunteerForSudan.mCardTextViewStyle"/>

            <TextView
                android:id="@+id/service_item_tv_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loc"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="@dimen/_4sdp"
                android:layout_below="@+id/service_item_tv_amount"
                android:layout_alignEnd="@+id/service_item_image"
                style="@style/Theme.VolunteerForSudan.mCardTextViewStyle"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>